{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@/*": ["client/src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "jsx": "react-jsx"
  },
  "include": ["server/**/*", "shared/**/*", "client/**/*", "types/**/*", "tests/**/*"]
}
